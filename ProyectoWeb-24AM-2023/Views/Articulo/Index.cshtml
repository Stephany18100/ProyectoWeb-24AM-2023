@model IEnumerable<ProyectoWeb_24AM_2023.Models.Entities.Articulo>

@{
    
    Layout = "_LayoutDashboard";
}

<h1>
    Dashoard
</h1>

<div class="row">
    <div class="offset-10 col-4 mb-4">
        <a asp-action="Crear" asp-controller="Articulo" class="btn-success mx-auto btn-lg"> <i class="fa-solid fa-hippo"></i></i> </i>Nuevo</a>
    </div>
</div>

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de articulos</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (Model.Count() > 0)
                    {

                        <table class="table table-bordered" id="tblArticulo" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th> @Html.DisplayNameFor(x => x. PkArticulo)</th> 
                                    <th> @Html.DisplayNameFor(x => x. Nombre)</th>
                                    <th> @Html.DisplayNameFor(x => x.Descripcion )</th>
                                    <th> @Html.DisplayNameFor(x => x.Precio )</th>
                                
                                    <th> Acciones</th>
                                </tr>

                            </thead>
                            <tbody>
                              
                                @{
                                    int i = 1;
                                }
                                

                                @foreach (var Item in Model)
                                {
                                    <tr>
                                        @* <td> @Html.DisplayFor(x => Item.PkArticulo)</td> *@
                                        <td><span>@(i++)</span></td>
                                        <td> @Html.DisplayFor(x => Item.Nombre )</td>
                                        <td> @Html.DisplayFor(x => Item.Descripcion )</td>
                                        <td> @Html.DisplayFor(x => Item.Precio) </td>
                                        <td>
                                            <a class=" btn btn-warning" asp-route-id=@Item.PkArticulo> <i class="fa-solid fa-pen-to-square"> </i>Editar</a>
                                            <a class=" btn btn-danger eliminar-articulo" data-id="@Item.PkArticulo"> <i class="fa-solid fa-trash"> </i>Eliminar</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>

                        </table>

                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>

    </div>

</div>



<a asp-action="IndexLibro" asp-controller="Libro" class="btn-success mx-auto btn-lg"> <i class="fa-solid fa-hippo"></i></i> </i>Libro</a>


